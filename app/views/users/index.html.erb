<h1>Registerd users</h1>

<% if @user %>
  <p><%= @user.name %> is logged in</p>
<% end %>

<br />
<table class="table">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>AOJ ID</th>
    <th>Email</th>
    <th>Encrypted password</th>
    <th>Salt</th>
    <th>Admin</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.id, user %></td>
    <td><%= user.name %></td>
    <td><%= user.aoj_id %></td>
    <td><%= user.email %></td>
    <td><%= user.encrypted_password %></td>
    <td><%= user.salt %></td>
    <td><%= user.is_admin %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', :method=>:delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if @authorized %>
  <%= link_to 'Logout', {:controller=>:users, :action=>:logout}, {:method=>:post} %><br />
<% else %>
  <%= render 'login_form' %>
<% end %>

<%= link_to 'New User', new_user_path %>
